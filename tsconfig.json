{
  "compilerOptions": {
    "target": "es5",    
          "jsx": "react",            // or "es6" for newer environments
    "module": "esnext",                  // Use "esnext" for ES modules
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/*.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
