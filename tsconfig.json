{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "declaration": true,             // Generates .d.ts files
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",              // Output directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "incremental": true      
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
